@model RescueSite.Entites.Request

@{
    ViewData["Title"] = "ApproveRequest";
}

<hr />



<div class="pd-20 card-box mb-30">

    <form asp-action="ApproveRequest">
         <div class="form-group row">
            <div class="col-sm-12 col-md-10">
            <input  asp-for="User.Id" style="text-align:right;" readonly class="form-control" />

            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">معرف مقدم الطلب</label>

            </div>
            <div class="form-group row">
            <div class="col-sm-12 col-md-10">
            <input asp-for="User.FullName" style="text-align:right;" readonly class="form-control"/>
            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">مقدم الطلب </label>

            </div>

        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                <input hidden asp-for="User.Id" style="text-align:right;" readonly class="form-control" />

                <input asp-for="carNum" style="text-align:right;" readonly class="form-control" />

            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">رقم السيارة</label>

        </div>

        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                <textarea asp-for="CarDetails" style="text-align:right;" readonly class="form-control"></textarea>
            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">تفاصيل السيارة</label>

        </div>
        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                <input asp-for="Location" style="text-align:right;" readonly class="form-control" />
            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">موقعك الأن</label>

        </div>
        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                <input asp-for="Date" style="text-align:right;" readonly class="form-control" />
            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label">تاريخ الطلب</label>

        </div>

        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                <input asp-for="Price" style="text-align:right;" class="form-control" />
            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label"> سعر الطلب</label>

        </div>

        <div class="form-group row">
            <div class="col-sm-12 col-md-10">
                @Html.DropDownList("WinchId", (IEnumerable<SelectListItem>)ViewBag.Winchs as SelectList, new {@class = "form-control" })

            </div>
            <label style="text-align:right;" class="col-sm-12 col-md-2 col-form-label"> الونش</label>

        </div>
        <div class="form-group row">
            <input type="submit" style="float:right; margin:1%" value="موافقة" class="btn btn-success" role="menuitem">

        </div>
    </form>


</div>